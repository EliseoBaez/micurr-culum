<script>
// Mobile menu toggle
const mobileMenuButton = document.getElementById('mobile-menu-button');
const mobileMenu = document.getElementById('mobile-menu');
mobileMenuButton.addEventListener('click', () => {
mobileMenu.classList.toggle('hidden');
});
// Scroll animation
const sections = document.querySelectorAll('.section-fade');
const fadeInOnScroll = () => {
sections.forEach(section => {
const sectionTop = section.getBoundingClientRect().top;
const windowHeight = window.innerHeight;
if (sectionTop < windowHeight * 0.85) {
section.classList.add('visible');
}
});
};
window.addEventListener('scroll', fadeInOnScroll);
window.addEventListener('load', fadeInOnScroll);
// Form submission with EmailJS
const contactForm = document.getElementById('contact-form');
const successMessage = document.getElementById('success-message');
const errorMessage = document.getElementById('error-message');
const submitButton = document.getElementById('submit-btn');
contactForm.addEventListener('submit', (e) => {
e.preventDefault();
// Disable button and show loading state
submitButton.disabled = true;
submitButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>
Enviando...';
// Get form data
const name = document.getElementById('name').value;
const email = document.getElementById('email').value;
const message = document.getElementById('message').value;
// Create template parameters
const templateParams = {
from_name: name,
from_email: email,
message: message
};
// Send email using EmailJS
emailjs.send('service_id', 'template_id', templateParams, 'user_id')
.then(() => {
// Reset form
contactForm.reset();
// Show success message
successMessage.classList.remove('hidden');
errorMessage.classList.add('hidden');
// Reset button
submitButton.disabled = false;
submitButton.innerHTML = 'Enviar Mensaje';
// Hide success message after 5 seconds
setTimeout(() => {
successMessage.classList.add('hidden');
}, 5000);
})
.catch(() => {
// Show error message
errorMessage.classList.remove('hidden');
successMessage.classList.add('hidden');
// Reset button
submitButton.disabled = false;
submitButton.innerHTML = 'Enviar Mensaje';
// Hide error message after 5 seconds
setTimeout(() => {
errorMessage.classList.add('hidden');
}, 5000);
});
});
// Simulación del envío de correo (para demostración)
document.getElementById('contact-form').addEventListener('submit', function(e) {
e.preventDefault();
// Deshabilitar botón y mostrar estado de carga
const submitBtn = document.getElementById('submit-btn');
submitBtn.disabled = true;
submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>
Enviando...';
// Simular envío (en un escenario real, aquí iría la lógica de envío)
setTimeout(() => {
// Restablecer formulario
this.reset();
// Mostrar mensaje de éxito
document.getElementById('success-message').classList.remove('hidden');
document.getElementById('error-message').classList.add('hidden');
// Restablecer botón
submitBtn.disabled = false;
submitBtn.innerHTML = 'Enviar Mensaje';
// Ocultar mensaje después de 5 segundos
setTimeout(() => {
document.getElementById('success-message').classList.add('hidden');
}, 5000);
}, 1500);
});
// Código para copiar el código fuente
const copySourceButton = document.getElementById('copy-source-button');
const copyNotification = document.getElementById('copy-notification');
copySourceButton.addEventListener('click', () => {
// Obtener el código fuente completo de la página
const fullSourceCode = document.documentElement.outerHTML;
// Crear un elemento textarea temporal para copiar el texto
const textarea = document.createElement('textarea');
textarea.value = fullSourceCode;
textarea.style.position = 'fixed';
textarea.style.opacity = '0';
document.body.appendChild(textarea);
// Seleccionar y copiar el texto
textarea.select();
document.execCommand('copy');
// Eliminar el textarea temporal
document.body.removeChild(textarea);
// Mostrar notificación
copyNotification.style.transform = 'translateX(0)';
// Ocultar notificación después de 3 segundos
setTimeout(() => {
copyNotification.style.transform = 'translateX(100%)';
}, 3000);
});
</script>
